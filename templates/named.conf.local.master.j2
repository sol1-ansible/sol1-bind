## {{ ansible_managed }}

{% for master_zone in bind_config_master_zones %}
zone "{{ master_zone.name }}" {
    type master;
    file "{{ bind_config_basepath }}/db.{{ master_zone.name }}";
{% if master_zone.allow_transfer is defined %}
    allow-transfer {
{% for allow_transfer in master_zone.allow_transfer %}
        {{ allow_transfer }};
{% endfor %}
    };
{% endif %}
    allow-update {
	127.0.0.1;
    };
};

{% endfor %}
